{
  "name": "@saltzmanjoelh/meteor-deployer",
  "version": "1.0.8",
  "description": "Build a meteor.js bundle and optionally package it into a docker image.",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "nyc mocha"
  },
  "bin": {
    "meteor-deployer": "dist/src/cli.js"
  },
  "nyc": {
    "include": [
      "**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saltzmanjoelh/meteor-deployer.git"
  },
  "keywords": [
    "meteor",
    "docker"
  ],
  "author": "Joel Saltzman",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/saltzmanjoelh/meteor-deployer/issues"
  },
  "homepage": "https://github.com/saltzmanjoelh/meteor-deployer#readme",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/mock-fs": "^3.6.30",
    "@types/node": "^11.13.10",
    "@types/sinon": "^7.0.11",
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "istanbul": "^0.4.5",
    "mocha": "^6.1.4",
    "nyc": "^14.1.0",
    "source-map-support": "^0.5.12",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "@types/minimist": "^1.2.0",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "minimist": "^1.2.0",
    "sinon": "^7.3.2"
  }
}
